 <div class="events">
    {{#each this}}
        <div class="row">
            <div class="col s12 m6">
            <div class="card deep-purple lighten-5">
                <div class="card-content white-text">
                <h4 class="event-title"><a class="text-info" href="/event/{{id}}">{{title}}</a></h4>
                 <p class="card-text">{{content}}</p>
                </div>
            </div>
            </div>
        </div>
    {{/each}}    
</div>        