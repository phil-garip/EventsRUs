{{!-- event title/organizer --}}
{{!-- title, location, date, description  --}}

<div class="row valign wrapper" id="create-event">
    <div class="col s12 m12">
      <div class="card deep-purple lighten-5">
        <div class="card-content black-text">
          <span class="card-title valign center">Create a New Event</span>
          {{!-- title --}}
          <div class="row">
            <form class="col s12">
              <div class="row">
                <div class="input-field col s12">
                  <textarea id="event-title" class="materialize-textarea"></textarea>
                  <label for="title">Title</label>
                </div>
              </div>
              {{!-- location --}}
              <div class="row">
              <div class="input-field col s12">
                <textarea id="location" class="materialize-textarea"></textarea>
                <label for="location">Location</label>
              </div>
            </div>
            {{!-- date --}}
            <div class="row">
              <div class="input-field col s12">
                <input placeholder="YYYY-MM-DD" id="date" type="text" class="validate">
                <label for="date">Date</label>
              </div>
              </div>
              {{!-- description --}}
              <div class="row">
              <div class="input-field col s12">
                <textarea id="description" class="materialize-textarea"></textarea>
                <label for="description">Description</label>
              </div>
            </div>
            {{!-- button --}}
            <div class = "valign center"><button class="btn waves-effect deep-purple darken-3"  type="submit" name="action">Submit
                <i class="material-icons right"></i></div>
            
                </button>
            </form>
          </div>
    
      

 



<script src="/js/create.event.js"></script>