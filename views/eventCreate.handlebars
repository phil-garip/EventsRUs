{{!-- event title/organizer --}}
{{!-- title, location, date, description  --}}

<div class="row valign wrapper">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Create a New Event</span>
          {{!-- title --}}
          <div class="row">
            <form class="col s12">
              <div class="row">
                <div class="input-field col s12">
                  <textarea id="title" class="materialize-textarea"></textarea>
                  <label for="title">Title</label>
                </div>
              </div>
            </form>
          </div>
    
        {{!-- location --}}
        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <textarea id="location" class="materialize-textarea"></textarea>
                <label for="location">Location</label>
              </div>
            </div>
          </form>
        </div>
          {{!-- date --}}
          <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <input placeholder="YYYY-MM-DD" id="date" type="text" class="validate">
                <label for="date">Date</label>
              </div>
        </div>
       </div>
    </div>
  </div>
 



<script src="/js/create.event.js"></script>