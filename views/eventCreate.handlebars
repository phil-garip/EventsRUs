{{!-- event title/organizer --}}
{{!-- title, location, date, description  --}}

<div class="row valign wrapper" id="create-event">
    <div class="col s12 m6">
      <div class="card deep-purple lighten-5">
        <div class="card-content black-text">
          <span class="card-title">Create a New Event</span>
          {{!-- title --}}
          <div class="row">
            <form class="col s12">
              <div class="row">
                <div class="input-field col s12">
                  <textarea id="title" class="materialize-textarea"></textarea>
                  <label for="title">Title</label>
                </div>
              </div>
            </form>
          </div>
    
        {{!-- location --}}
        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <textarea id="location" class="materialize-textarea"></textarea>
                <label for="location">Location</label>
              </div>
            </div>
          </form>
        </div>
          {{!-- date --}}
          <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <input placeholder="YYYY-MM-DD" id="date" type="text" class="validate">
                <label for="date">Date</label>
              </div>
              </form>

              {{!-- description --}}

              <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <textarea id="description" class="materialize-textarea"></textarea>
                <label for="description">Description</label>
              </div>
            </div>
          </form>
        </div>
              <button class="btn waves-effect deep-purple darken-3"  type="submit" name="action">Submit
                <i class="material-icons right"></i>
                </button>
        </div>
       </div>
    </div>
  </div>

 



<script src="/js/create.event.js"></script>