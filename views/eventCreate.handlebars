{{!-- event title/organizer --}}
<div class="row" id="create-event">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
            <div class="row">
              <div class="row">
                <form class="col s12">
                  <div class="row">
                    <div class="input-field col s12">
                      <textarea id="event-title" class="materialize-textarea"></textarea>
                      <label for="textarea1">Event Title</label>
                       <textarea id="textarea2" class="materialize-textarea"></textarea>
                      <label for="textarea2">Location</label>
                    </div>
                    <div class="input-field col s12">
                      <textarea id="event-time" class="materialize-textarea"></textarea>
                      <label for="textarea3">Time</label>
                      <div class="input-field col s12">
                      <input id="email" type="email" class="validate">
                      <label for="email">Email</label>
                      <span class="helper-text" data-error="wrong" data-success="right"></span>
                    
                      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                        <i class="material-icons right">send</i>
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>   
          </div>
      </div>
    </div>
  </div>


<script src="/js/create.event.js"></script>